<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>

        <item name="android:colorPrimary">?attr/colorSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>

        <item name="colorTagBorderShowAsk">@color/colorTagBorderShowAsk</item>
        <item name="colorTagBorderMedia">@color/colorTagBorderMedia</item>
        <item name="colorTagBorder">@color/colorTagBorder</item>

        <item name="colorTagBackgroundShowAsk">@color/colorTagBackgroundShowAsk</item>
        <item name="colorTagBackgroundMedia">@color/colorTagBackgroundMedia</item>
        <item name="colorTagBackground">@color/colorTagBackground</item>
    </style>

    <style name="AppTheme.ToolbarStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>

</resources>
